<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>

	<session-factory>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="connection.url">
			jdbc:mysql://localhost:3306/twcn
		</property>
		<property name="connection.username">rain</property>
		<property name="connection.password">rain</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="myeclipse.connection.profile">
			mysql_twcn
		</property>
		<!-- for warning and encoding -->
		<property name="connection.useSSL">false</property>
		<property name="connection.characterEncoding">UTF-8</property>
		<property name="connection.autocommit">true</property>
		<!-- for debug -->
		<!-- <property name="show_sql">true</property>
		<property name="format_sql">true</property> -->

		<!-- entity mapping -->
		<mapping class="com.rainsho.entity.T2p" />
	</session-factory>

</hibernate-configuration>